@model IEnumerable<SportsManager.Models.Competitor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })


    <br /><br />Click <b>details</b> to see all competitor information.
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.competitorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.competitorEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.competitorCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.competitorGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.competitorPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.competitorWebsite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games)
            </th>
            <th>Options</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.competitorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.competitorEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.competitorCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.competitorGender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.competitorPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.competitorWebsite)
                </td>
                <td>
                    @{
                        foreach (var game in item.Games)
                        {
                            @game.gameName <br />
                        }
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.competitorID }) <br />
                    @Html.ActionLink("Details", "Details", new { id = item.competitorID }) <br />
                    @Html.ActionLink("Delete", "Delete", new { id = item.competitorID }) <br />
                </td>
            </tr>
    }

    </table>
</div>