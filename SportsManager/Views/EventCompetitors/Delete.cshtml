@model SportsManager.Models.EventCompetitor

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Event.Game.gameName Event Competitor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Competitor.competitorName)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.Competitor.competitorName)
        </dd>
    
        <dt>
            @Html.DisplayNameFor(model => model.competitorPosition)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.competitorPosition)
        </dd>
    
        <dt>
            @Html.DisplayNameFor(model => model.competitorMedal)
        </dt>
    
        <dd>
            @Html.DisplayFor(model => model.competitorMedal)
        </dd>
    
    </dl>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
    
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", "Events", new { id = Model.eventID }, null)
        </div>
    }
</div>
